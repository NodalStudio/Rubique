{
  "name": "@nodalstudio/rubique",
  "version": "1.0.0",
  "description": "A high-performance mathematical and quantitative library, leveraging WebAssembly for efficient linear algebra and numerical computations",
  "license": "MIT",
  "compilerOptions": {
    "strict": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nodalstudio/rubique.git"
  },
  "keywords": [
    "mathematics",
    "matrix",
    "arithmetic",
    "statistics",
    "linear algebra",
    "matlab",
    "regression",
    "finance",
    "quantitative analysis"
  ],
  "contributors": [
    {
      "name": "Beno√Æt Mayer",
      "email": "mayer.benoit@gmail.com",
      "url": "https://github.com/bemayer"
    },
    {
      "name": "Max Todaro",
      "email": "m.todaro.ge@gmail.com",
      "url": "https://github.com/maxto"
    }
  ],
  "tasks": {
    "test": "deno fmt --check lib && deno test --doc lib",
    "lint": "deno lint lib",
    "lint:fix": "deno fmt lib && deno lint --fix lib",
    "build": "deno run -A jsr:@deno/wasmbuild --out ./rs_lib/pkg",
    "docs": "deno run -A ./scripts/build_docs.ts",
    "benchmark": "deno run --allow-write ./scripts/benchmark.ts",
    "deploy": "deno task build && deno task test && deno task lint:fix && deno publish --allow-dirty"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    },
    "include": ["scripts/", "lib/", "test/"],
    "exclude": ["dist/"]
  },
  "imports": {
    "dayjs": "npm:dayjs@1.11.13"
  },
  "exports": {
    ".": "./index.ts"
  },
  "publish": {
    "include": [
      "index.ts",
      "lib/**/*.ts",
      "rs_lib/pkg/*.js",
      "rs_lib/pkg/*.ts",
      "rs_lib/pkg/*.wasm",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "scripts/",
      "docs/",
      "target/",
      "test/",
      "rs_lib/src/",
      "rs_lib/Cargo.toml",
      "*.md",
      "!README.md",
      "!LICENSE",
      "package.json",
      "package-lock.json",
      "node_modules/",
      "vitest.config.ts"
    ]
  },
  "fmt": {
    "include": ["lib/", "index.ts", "scripts/", "test/", "deno.json"],
    "exclude": [
      "rs_lib/pkg/",
      "target/",
      "node_modules/",
      "docs/",
      "dist/",
      "scripts/assets/"
    ]
  }
}
